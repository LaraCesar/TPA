programa
{
	
	
	funcao inicio()
	{
		inteiro numero
		escreva("Exibir um número passado como parâmetro na funçao\n")
		escreva("--------------------------------------------------\n")
		escreva("Digite um número:")
		leia(numero)
		imprime(numero)
	}

	funcao imprime(inteiro numero)
	{
		escreva("O número é:",numero)
	}
	
}

